{% extends "::layout/layout.html.twig" %}
{% block title %}{{ page.titre }}{% endblock %}
 {% block stylesheets %} <link href="{{ asset('css/unslider.css')}}" rel="stylesheet">{% endblock %}
{% block body %}






    {% if page.showSlides %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12 hidden-lg "><br><br></div>
            <div class="col-lg-12 visible-md visible-sm"><br></div>
            <div class="col-lg-12 hidden-xs hidden-sm">


                <div class="span12" style="margin-left:20px;margin-top:40px;">
                   <div class="slider">

                    <ul class="list-unstyled list-inline ">
                    {% for slide in slides %}<li>{{ slide.contenu |raw}}</li>{% endfor %}
                    </ul>

                   </div>
                    </div>



            </div>
        </div>
    </div>
        {% else %}
        <br>
{% endif %}


    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <br>
<h1 class="titre">{{ page.grandtitre }}</h1>

            <div class="span12" style="margin-left:20px;margin-top:20px;">

                {% if  page.contenu != "@@documents@@"%}
                {{ page.contenu |raw}}
                {% else %}

                    {% for documentation in documentations %}

                        <li>{{ documentation.name |raw}} :  <a href="{{ asset('documents/' ~(documentation.path)) }}" class="btn btn-default">Télécharger</a></li>

                    {% endfor %}

                <br><br><br><br><br><br><br><br><br>
                {% endif %}

            </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script src="//cdn.jsdelivr.net/velocity/1.2.3/velocity.min.js"></script>
<script src="{{ asset('js/unslider.js') }}"></script>
<script>
    $(function() {

        $('.slider').unslider({

            autoplay: true,
            delay : 60000,
            speed: 1500,
            arrows: false
        });

    });
</script>
{% endblock %}
