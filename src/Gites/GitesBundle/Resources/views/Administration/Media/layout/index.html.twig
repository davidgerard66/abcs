{% extends "::layout/layoutAdmin.html.twig" %}

{% block body -%}
    <h1> Documents  </h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>


                <th>Nom</th>
                <th>Document pdf</th>
                <th>Ordre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>

                <td>{{ entity.name }} </td>
                <td><a href='{{ pathDefault ~ entity.getWebPath }}' target="_blank">Télécharger</a></td>
                <td>{{ entity.ordre }}</td>
                <td>



                        <a href="{{ path('admin_media_edit', { 'id': entity.id }) }}"><i class="glyphicon glyphicon-edit"></i></a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


            <a href="{{ path('admin_media_new') }}" class="btn btn-success">
                Ajouter un nouveau fichier
            </a>

    {% endblock %}
